{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "jsx": "preserve",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["ESNext", "DOM"],
        "baseUrl": ".",

        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"]
}
