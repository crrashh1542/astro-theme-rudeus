---
import { getCollection } from 'astro:content'

const articles = await getCollection('archives')
const tagMap = new Map<string, number>()

articles.forEach((item) => {
    const tags = item.data.tags ?? []
    tags.forEach((tag) => {
        tagMap.set(tag, (tagMap.get(tag) ?? 0) + 1)
    })
})

const tags = Array.from(tagMap.entries()).sort((a, b) => {
    const countDiff = b[1] - a[1]
    if (countDiff != 0) return countDiff
    return a[0].localeCompare(b[0], 'zh-Hans-CN')
})
---
{
    tags.length > 0 ? (
        <div class="r-card">
            <div class="r-title">标签</div>
            <div class="r-list">
                {tags.map(([tag, count]) => (
                    <span class="r-tag" title={`${tag}（${count}）`}>
                        <span class="r-tag-name">{tag}</span>
                        <span class="r-tag-count">{count}</span>
                    </span>
                ))}
            </div>
        </div>
    ) : (
        <div class="r-card empty">暂无标签</div>
    )
}

<style lang="less">
    @import url('@/styles/variables.less');

    .r-card {
        width: 240px;
        background-color: #fff;
        border-radius: @layout-content-border-radius;
        padding: (@layout-content-padding / 1.4) 12px;
        font-size: 14px;

        &.empty {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .r-title {
            font-size: 16px;
            font-weight: 600;
            margin: 0 0 10px 10px;
        }

        .r-list {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
            padding: 4px 8px 8px;

            .r-tag {
                display: inline-flex;
                align-items: center;
                gap: 6px;
                padding: 5px 10px;
                border-radius: @layout-border-radius;
                background-color: @color-theme-light;
                color: @color-theme-dark;
                font-size: 14px;
                white-space: nowrap;
            }

            .r-tag-count {
                font-size: 12px;
                color: @color-secondary;
            }
        }
    }
</style>
